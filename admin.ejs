<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>الإدارة | WassitDZ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>body{background:#f3f4f6; padding:30px;}</style>
</head>
<body>
<div class="container">
    <div class="card p-4 mb-4 border-0 shadow-sm">
        <h5 class="mb-3">إعدادات الموقع</h5>
        <form action="/update-settings" method="POST" class="row g-2">
            <div class="col-12"><input type="text" name="announcement" class="form-control" value="<%= settings.announcement %>" placeholder="نص الإشهار"></div>
            <div class="col-md-4"><input type="text" name="supportLink" class="form-control" value="<%= settings.supportLink %>" placeholder="رابط الدعم"></div>
            <div class="col-md-4"><input type="text" name="mediationLink" class="form-control" value="<%= settings.mediationLink %>" placeholder="رابط الوساطة"></div>
            <div class="col-md-4"><input type="text" name="sellAccountLink" class="form-control" value="<%= settings.sellAccountLink %>" placeholder="رابط بيع حساب"></div>
            <div class="col-12"><button class="btn btn-dark w-100 mt-2">حفظ الإعدادات</button></div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow-sm">
                <h5 class="mb-3">إضافة حساب</h5>
                <form action="/add-account" method="POST" enctype="multipart/form-data">
                    <input type="text" name="title" class="form-control mb-2" placeholder="العنوان" required>
                    <input type="number" step="0.01" name="price" class="form-control mb-2" placeholder="السعر" required>
                    <select name="linkType" class="form-select mb-2">
                        <option value="ID Konami">ID Konami</option>
                        <option value="Google Play">Google Play</option>
                        <option value="غير مربوط">غير مربوط</option>
                    </select>
                    <textarea name="players" class="form-control mb-2" placeholder="اللاعبين"></textarea>
                    <input type="file" name="imageFiles" class="form-control mb-3" multiple required>
                    <button class="btn btn-primary w-100">نشر</button>
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card p-4 border-0 shadow-sm">
                <table class="table">
                    <thead><tr><th>ID</th><th>العنوان</th><th>السعر</th><th>-</th></tr></thead>
                    <tbody>
                        <% accounts.forEach(acc => { %>
                        <tr><td>#<%= acc.id %></td><td><%= acc.title %></td><td>$<%= acc.price %></td>
                        <td><a href="/delete/<%= acc.id %>" class="text-danger">حذف</a></td></tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>إدارة WassitDZ Game</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light p-4">

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">إدارة WassitDZ Game</h3>
        <a href="/logout" class="btn btn-danger btn-sm">تسجيل خروج</a>
    </div>

    <div class="card border-0 shadow-sm p-4 mb-4">
        <h5 class="fw-bold mb-3"><i class="fas fa-cog text-primary"></i> إعدادات الموقع والشريط الإشهاري</h5>
        <form action="/update-settings" method="POST" class="row g-3">
            <div class="col-12">
                <label class="form-label small fw-bold">النص الإشهاري المتحرك (يظهر في أعلى المتجر)</label>
                <input type="text" name="announcement" class="form-control mb-2" value="<%= settings.announcement %>" required>
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-bold">رابط الدعم</label>
                <input type="text" name="supportLink" class="form-control" value="<%= settings.supportLink %>">
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-bold">رابط الوساطة</label>
                <input type="text" name="mediationLink" class="form-control" value="<%= settings.mediationLink %>">
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-bold">رابط "بيع حسابك"</label>
                <input type="text" name="sellAccountLink" class="form-control" value="<%= settings.sellAccountLink %>">
            </div>
            <div class="col-12 text-end mt-3">
                <button type="submit" class="btn btn-dark px-4">حفظ الإعدادات والشريط</button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm p-4">
                <h5 class="fw-bold mb-3 text-primary">إضافة حساب جديد</h5>
                <form action="/add-account" method="POST" enctype="multipart/form-data">
                    <input type="text" name="title" class="form-control mb-2" placeholder="عنوان الحساب" required>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input type="number" name="price" class="form-control" placeholder="السعر $" required></div>
                        <div class="col-6">
                            <select name="linkType" class="form-select">
                                <option value="ID Konami">ID Konami</option>
                                <option value="Google Play">Google Play</option>
                                <option value="غير مربوط">غير مربوط</option>
                            </select>
                        </div>
                    </div>
                    <textarea name="players" class="form-control mb-2" placeholder="أهم اللاعبين"></textarea>
                    <input type="file" name="imageFiles" class="form-control mb-3" multiple required>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="featured" id="f">
                        <label class="form-check-label" for="f">تمييز (Featured)</label>
                    </div>
                    <button class="btn btn-primary w-100 fw-bold">نشر الحساب</button>
                </form>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card border-0 shadow-sm p-4">
                <h5 class="fw-bold mb-3">الحسابات المعروضة</h5>
                <table class="table table-hover align-middle">
                    <thead><tr><th>الصورة</th><th>ID</th><th>السعر</th><th>حذف</th></tr></thead>
                    <tbody>
                        <% accounts.forEach(acc => { %>
                        <tr>
                            <td><img src="<%= acc.imgs[0] %>" width="50" class="rounded"></td>
                            <td>#<%= acc.id %></td>
                            <td class="text-success fw-bold">$<%= acc.price %></td>
                            <td><a href="/delete/<%= acc.id %>" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>

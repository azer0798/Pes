<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>لوحة الإدارة | WassitDZ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>body { background: #f8fafc; padding: 40px 0; }</style>
</head>
<body>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold">لوحة تحكم المتجر</h4>
        <a href="/" class="btn btn-sm btn-outline-secondary">عرض المتجر</a>
    </div>

    <div class="card border-0 shadow-sm p-4 mb-4">
        <h6 class="fw-bold mb-3 text-primary">إعدادات الموقع والألوان</h6>
        <form action="/update-settings" method="POST" class="row g-3">
            <div class="col-md-9">
                <label class="small fw-bold">نص الشريط المتحرك</label>
                <input type="text" name="announcement" class="form-control" value="<%= settings.announcement %>">
            </div>
            <div class="col-md-3">
                <label class="small fw-bold">لون الموقع الرئيسي</label>
                <input type="color" name="themeColor" class="form-control form-control-color w-100" value="<%= settings.themeColor %>">
            </div>
            <div class="col-md-4"><input type="text" name="supportLink" class="form-control" value="<%= settings.supportLink %>" placeholder="رابط الدعم"></div>
            <div class="col-md-4"><input type="text" name="mediationLink" class="form-control" value="<%= settings.mediationLink %>" placeholder="رابط الوساطة"></div>
            <div class="col-md-4"><input type="text" name="sellAccountLink" class="form-control" value="<%= settings.sellAccountLink %>" placeholder="رابط بيع حساب"></div>
            <div class="col-12 text-end"><button class="btn btn-dark">حفظ الإعدادات</button></div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm p-4">
                <h6 class="fw-bold mb-3">إضافة حساب جديد</h6>
                <form action="/add-account" method="POST" enctype="multipart/form-data">
                    <input type="text" name="title" class="form-control mb-2" placeholder="عنوان الحساب" required>
                    <div class="row g-2 mb-2">
                        <div class="col-6"><input type="text" name="priceUSD" class="form-control" placeholder="السعر $" required></div>
                        <div class="col-6"><input type="text" name="priceDZ" class="form-control" placeholder="السعر د.ج" required></div>
                    </div>
                    <select name="linkType" class="form-select mb-2">
                        <option value="ID Konami">ID Konami</option>
                        <option value="Google Play">Google Play</option>
                        <option value="غير مربوط">غير مربوط</option>
                    </select>
                    <textarea name="players" class="form-control mb-2" placeholder="أبرز اللاعبين"></textarea>
                    <input type="file" name="imageFiles" class="form-control mb-3" multiple required>
                    <button class="btn btn-primary w-100">نشر الحساب</button>
                </form>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card border-0 shadow-sm p-4">
                <table class="table align-middle">
                    <thead><tr><th>ID</th><th>العنوان</th><th>السعر</th><th>-</th></tr></thead>
                    <tbody>
                        <% accounts.forEach(acc => { %>
                        <tr>
                            <td>#<%= acc.id %></td>
                            <td><%= acc.title %></td>
                            <td><%= acc.priceDZ %> د.ج</td>
                            <td><a href="/delete/<%= acc.id %>" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>
